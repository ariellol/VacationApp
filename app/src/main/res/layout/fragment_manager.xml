<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layoutDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <Button
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/button_star_command"
        android:layout_gravity="center"
        android:id="@+id/watch_users_button"
        android:text="צפייה במשתמשים"
        app:backgroundTint="@color/greenBlueCrayola"
        android:layout_height="wrap_content"/>


        <Button
            android:layout_width="wrap_content"
            android:text="צפייה ועריכה בחבילות הנופש"
            android:background="@drawable/button_star_command"
            android:textColor="@color/white"
            app:backgroundTint="@color/starCommandBlue"
            android:id="@+id/show_all_vacations"
            android:layout_gravity="center"
            android:layout_marginVertical="30dp"
            android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_star_command"
        app:backgroundTint="@color/oceanGreen"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/show_extras_button"
        android:layout_gravity="center"
        android:text="צפייה ועריכה בתוספות ואטרקציות"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_star_command"
        app:backgroundTint="@color/maximumBlueGreen"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/edit_entry_ticket"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp"
        android:text="צפייה ועריכה בצמיד כניסה למתחם"/>

</LinearLayout>


