<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layoutDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


    <Button
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/button_star_command"
        android:layout_gravity="center"
        android:id="@+id/watch_users_button"
        android:text="צפייה במשתמשים"
        app:backgroundTint="@color/greenBlueCrayola"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:text="צפייה ועריכה בחבילות הנופש"
            android:background="@drawable/button_star_command"
            android:textColor="@color/white"
            android:id="@+id/show_all_vacations"
            android:layout_height="match_parent"/>
    </LinearLayout>
    </LinearLayout>

