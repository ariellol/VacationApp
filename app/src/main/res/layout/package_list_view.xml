<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:elevation="4dp"
    app:cardCornerRadius="15dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="200dp"
            android:id="@+id/package_Image"
            android:background="@color/lightGrey"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/package_Image"
            android:textStyle="bold"
            android:id="@+id/package_title"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/package_description"
            android:layout_toLeftOf="@id/package_Image"
            android:layout_marginTop="7.5dp"
            android:layout_marginRight="7.5dp"
            android:textColor="@color/black"
            android:layout_below="@id/package_title"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/package_Image"
            android:layout_below="@id/package_description"
            android:src="@drawable/ic_baseline_bedroom_parent_24"
            android:id="@+id/bedroom_icon"
            android:layout_marginTop="7.5dp"
            android:layout_marginRight="7.5dp"
            app:tint="@color/greenBlueCrayola"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/package_room_number"
            android:layout_toLeftOf="@id/bedroom_icon"
            android:layout_marginTop="9dp"
            android:layout_marginRight="3.75dp"
            android:layout_below="@id/package_description"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/greenBlueCrayola"
            android:layout_toLeftOf="@id/package_Image"
            android:layout_below="@id/bedroom_icon"
            android:layout_marginTop="7.5dp"
            android:id="@+id/peopleIcon"
            android:layout_marginRight="7.5dp"
            android:src="@drawable/about"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/bedroom_icon"
            android:layout_toLeftOf="@id/peopleIcon"
            android:layout_marginTop="9dp"
            android:id="@+id/package_guest_amount"
            android:layout_marginRight="3.75dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/peopleIcon"
            android:layout_toLeftOf="@id/package_Image"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:id="@+id/package_availabilty"
            android:layout_marginRight="7.5dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceForWeekend"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7.5dp"
            android:textSize="16sp"
            android:textColor="@color/starCommandBlue"
            android:layout_below="@id/package_availabilty"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>